<UserControl x:Class="StellaSoraCommissionAssistant.Views.AppSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
             xmlns:viewmodels="clr-namespace:StellaSoraCommissionAssistant.ViewModels"
             xmlns:utilities="clr-namespace:StellaSoraCommissionAssistant.Utilities"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
             d:DesignHeight="600" d:DesignWidth="700">

    <Grid Margin="10 10 10 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <hc:ScrollViewer Grid.Column="0" HorizontalAlignment="Stretch"
            HorizontalScrollBarVisibility="Disabled" IsInertiaEnabled="True"
            hc:ScrollViewerAttach.AutoHide="False">
            <StackPanel>
                <hc:Divider Content="软件设置" Margin="10 10 10 10"/>
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="64"/>
                        <RowDefinition Height="36"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="游戏路径" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Content="选择" Width="56" Height="32" Margin="8 0 0 0"
                                Command="{Binding SelectGamePathCommand}"/>
                    </StackPanel>
                    <TextBox Grid.Row="1" Text="{Binding ProgramData.SettingsData.GamePath}" Width="400" Height="32"
                             TextChanged="GamePathTextBoxTextChanged"/>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="等待客户端启动时间（秒）" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding ProgramData.SettingsData.AutoRunDeviceWaittingTimeSpan}" Width="36" Height="32" Margin="4 0 0 0"
                                 HorizontalContentAlignment="Center"
                                 PreviewTextInput="AutoRunDeviceWaittingTimeSpanTextBoxPreviewTextInput"
                                 TextChanged="AutoRunDeviceWaittingTimeSpanTextBoxTextChanged"
                                 LostFocus="AutoRunDeviceWaittingTimeSpanTextBoxLostFocus"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0 0 0 0" HorizontalAlignment="Center">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <hc:Shield Subject="软件版本" Margin="0 4 0 4" Status="{x:Static utilities:Constants.AppVersion}" HorizontalAlignment="Center"/>
                            <hc:Shield Subject="资源文件版本" Margin="0 4 0 4" Status="{Binding ProgramData.ResourcesVersion}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <CheckBox Content="启动软件时自动检查更新" Margin="16 4 0 6"
                                      IsChecked="{Binding ProgramData.SettingsData.IsAutoCheckAppUpdate}"
                                      Click="SettingsCheckBoxClick"/>
                            <CheckBox Content="自动检查资源文件更新" Margin="16 6 0 4"
                                      IsChecked="{Binding ProgramData.SettingsData.IsAutoUpdateResources}"
                                      Click="SettingsCheckBoxClick"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Row="4" Content="检查更新" Width="80" Height="36" Margin="0 0 0 0"
                            Command="{Binding OpenUpdateWindowCommand}"/>
                </Grid>

                <hc:Divider Content="关于" Margin="10 10 10 10"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 10">
                        <Button Content="使用说明" Width="80" Height="36" Margin="0 0 10 0"
                                Command="{Binding OpenHelpWindowCommand}"/>
                        <Button Content="查看公告" Width="80" Height="36" Margin="10 0 0 0"
                                Command="{Binding OpenAnnouncementWindowCommand}"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="B站主页" Foreground="Blue" Cursor="Hand"
                               MouseDown="BilibiliLinkMouseDown"/>
                    <hc:Shield Grid.Row="2" Subject="GitHub" Status="星塔旅人委托小助手" Margin="0 0 0 10"
                               VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"
                               Command="hc:ControlCommands.OpenLink" CommandParameter="{x:Static utilities:Constants.ProjectGitHubUrl}"/>
                    <hc:Shield Grid.Row="3" Subject="Gitee" Status="星塔旅人委托小助手" 
                               VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"
                               Command="hc:ControlCommands.OpenLink" CommandParameter="{x:Static utilities:Constants.ProjectGiteeUrl}"/>
                </Grid>
            </StackPanel>
        </hc:ScrollViewer>
    </Grid>
</UserControl>